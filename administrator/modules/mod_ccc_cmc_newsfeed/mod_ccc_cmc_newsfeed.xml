<?xml version="1.0" encoding="utf-8"?>
<extension type="module"
        version="2.5"
        client="administrator"
        method="upgrade"
        >
    <name>CMC - Newsfeed</name>
    <author>compojoom.com</author>
    <creationDate>2013-09-26</creationDate>
    <copyright>Copyright (C) 2012 Yves Hoppe - compojoom.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>yves@compojoom.com</authorEmail>
    <authorUrl>compojoom.com</authorUrl>
    <version>1.4</version>
    <description>MOD_CCC_CMC_NEWSFEED_XML_DESCRIPTION</description>
    <files>
        <file>helper.php</file>
<file module="mod_ccc_cmc_newsfeed">mod_ccc_cmc_newsfeed.php</file>
<folder>tmpl</folder>
    </files>
    <languages folder="administrator/language">
        <language tag="de-DE">de-DE/de-DE.mod_ccc_cmc_newsfeed.ini</language>
<language tag="en-GB">en-GB/en-GB.mod_ccc_cmc_newsfeed.ini</language>
<language tag="es-ES">es-ES/es-ES.mod_ccc_cmc_newsfeed.ini</language>
<language tag="nl-NL">nl-NL/nl-NL.mod_ccc_cmc_newsfeed.ini</language>
<language tag="pt-BR">pt-BR/pt-BR.mod_ccc_cmc_newsfeed.ini</language>
    </languages>
    <help key="MOD_CCC_CMC_MATUKIO_NEWSFEED" />
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="feedurl"
                        type="text"
                        default="https://compojoom.com/about/blog/tags/listings/cmc?format=feed&amp;type=rss"
                        label="MOD_CCC_CMC_NEWSFEED_URL"
                        description="MOD_CCC_CMC_NEWSFEED_URL_DESC" />
                <field
                        name="feeditems"
                        type="text"
                        default="5"
                        label="MOD_CCC_CMC_NEWSFEED_FEEDITEMS"
                        description="MOD_CCC_CMC_NEWSFEED_FEEDITEMS_DESC" />
                <field
                        name="word_count"
                        type="text"
                        default="30"
                        label="MOD_CCC_HOTSPOTS_NEWSFEED_WORD_COUNT"
                        description="MOD_CCC_HOTSPOTS_NEWSFEED_WORD_COUNT_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="automatic_title"
                        type="radio"
                        default="0"
                        label="COM_MODULES_FIELD_AUTOMATIC_TITLE_LABEL"
                        description="COM_MODULES_FIELD_AUTOMATIC_TITLE_DESC">
                    <option
                            value="0">JNO</option>
                    <option
                            value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
